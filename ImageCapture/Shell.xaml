<Window x:Class="ImageCapture.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageCapture"
        mc:Ignorable="d"
        Title="Shell" Height="480" Width="640">
    <Grid>
        <!-- Container for AForge image capture system-->
        <Image Source="{Binding Image}" Stretch="Uniform" Margin="5"/>
        
        <!-- Button to freeze Image-->
        <Button Command="{Binding TakeSnapshot}" Content="Take Snapshot"
                VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
